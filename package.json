{
  "name": "smile-server",
  "description": "",
  "private": true,
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "nodemon": "nodemon --exec babel-node /src/server.js",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build ./src -s",
    "build:server" : "babel src -d build",
    "build": "npm run clean && npm run build-babel",
    "start": "npm run build:server && node ./build/server.js",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix build && npm run build"
  },
  "engines": {
    "node": "16.15.0",
    "npm": "8.5.5"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/node": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "nodemon": "^2.0.15"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.8.3",
    "nanoid": "^3.0.0"
  }
}
